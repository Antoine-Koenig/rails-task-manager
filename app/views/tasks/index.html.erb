<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed == false %>
      <p><%= link_to "🗑", task, method: :delete, data: { confirm: "Are you sure ?"} %> | <%= link_to task.title, task %> ➡ ❎</p>
  <% else %>
      <p><%= link_to "🗑", task, method: :delete, data: { confirm: "Are you sure ?"} %> | <%= link_to task.title, task %> ➡ ✔</p>
  <% end %>
<% end %>
<p class= "btn" id="btn"><%= link_to "Create task", tasks_new_path %></p>


