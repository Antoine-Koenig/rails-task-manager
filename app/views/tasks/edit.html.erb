<%= form_for(@task) do |f| %>
<div class="inupt">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="inupt">
  <%= f.label :details %>
  <%= f.text_field :details %>
</div>
<div class="inupt">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
</div>
<div class="btn">
  <%= f.submit value: "Edit !" %>
</div>
<% end %>
